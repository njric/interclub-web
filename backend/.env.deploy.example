# Deployment configuration variables
# Copy this file to .env.deploy and customize for your environment

# Domain configuration
DOMAIN=votre-domaine.com
DOMAIN_WWW=www.votre-domaine.com

# Backend configuration
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
BACKEND_WORKERS=2

# SSL certificates path (managed by Let's Encrypt)
SSL_CERT_PATH=/etc/letsencrypt/live/votre-domaine.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/votre-domaine.com/privkey.pem
